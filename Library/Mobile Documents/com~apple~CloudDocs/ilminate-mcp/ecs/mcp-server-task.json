{
  "family": "ilminate-mcp-server",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "containerDefinitions": [
    {
      "name": "mcp-server",
      "image": "<account-id>.dkr.ecr.<region>.amazonaws.com/ilminate-mcp-server:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "APEX_BRIDGE_URL",
          "value": "http://apex-bridge:8888"
        },
        {
          "name": "LOG_LEVEL",
          "value": "info"
        },
        {
          "name": "NODE_ENV",
          "value": "production"
        }
      ],
      "secrets": [
        {
          "name": "APEX_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:<region>:<account-id>:secret:ilminate/apex-api-key"
        },
        {
          "name": "PORTAL_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:<region>:<account-id>:secret:ilminate/portal-api-key"
        },
        {
          "name": "SIEM_API_PASSWORD",
          "valueFrom": "arn:aws:secretsmanager:<region>:<account-id>:secret:ilminate/siem-password"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/ilminate-mcp-server",
          "awslogs-region": "<region>",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "node -e \"require('http').get('http://localhost:3000/health', (r) => {process.exit(r.statusCode === 200 ? 0 : 1)})\""],
        "interval": 30,
        "timeout": 5,
        "retries": 3
      }
    }
  ],
  "taskRoleArn": "arn:aws:iam::<account-id>:role/ilminate-mcp-server-task-role",
  "executionRoleArn": "arn:aws:iam::<account-id>:role/ecsTaskExecutionRole"
}

